        "interval": 30,
        "timeout": 10,
        "retries": 5,
        "startPeriod": 120
      }
    },
    "dashboard": {
      "taskCpu": "1024",
      "taskMemory": "2048",
      "desiredCount": 1,
      "containerPort": 8050,
      "healthCheckPath": "/",
      "healthCheck": {
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 90
      }
    }
  },
  
  "auth0": {
    "domain": "dev-8jwmstalyswjk6k6.us.auth0.com",
    "clientId": "wj15bluzPl3nO1JtUIJ8hDEDgoGu1G9A",
    "clientSecret": "${AUTH0_CLIENT_SECRET}",
    "apiAudience": "https://dev-8jwmstalyswjk6k6.us.auth0.com/api/v2/"
  },
  
  "aws": {
    "accessKeyId": "${AWS_ACCESS_KEY_ID}",
    "secretAccessKey": "${AWS_SECRET_ACCESS_KEY}",
    "s3BucketName": "inventory-ai-bucket"
  },
  
  "logging": {
    "retentionDays": 7
