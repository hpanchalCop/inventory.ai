  "database": {
    "instanceClass": "db.t3.micro",
    "allocatedStorage": 20,
    "engine": "postgres",
    "engineVersion": "15.8",
    "masterUsername": "postgres",
    "masterPassword": "${DB_MASTER_PASSWORD}",
    "dbName": "inventory_db",
